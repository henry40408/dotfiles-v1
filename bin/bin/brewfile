#!/usr/bin/env python3

import datetime
import os
import pathlib

def main():
    real_filepath = pathlib.Path(__file__).resolve()
    real_dir = pathlib.Path("{}/../../..".format(real_filepath)).resolve()
    os.chdir(real_dir)
    os.system('brew bundle dump --force')
    os.system('git add Brewfile Brewfile.lock.json')
    os.system('git commit -m "feat: update Brewfile at {}"'.format(datetime.datetime.now().isoformat()))

if __name__ == '__main__':
    main()
